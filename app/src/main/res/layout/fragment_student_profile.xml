<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".StudentProfileFragment">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/team_background"
            android:scaleType="centerCrop"
            android:alpha="0.7"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/black_overlay"
            android:alpha="0.7"/>

       <ScrollView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:fillViewport="true">
        <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/student_details"
       >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/student_image_layout"
        >

       <!-- <com.google.android.material.card.MaterialCardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:id="@+id/student_image_card"
            > -->

            <ImageView
                android:id="@+id/student_image"


                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:scaleType="centerCrop"/>
       <!-- </com.google.android.material.card.MaterialCardView> -->
    </RelativeLayout>

       <TextView
           android:layout_below="@+id/student_image_layout"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textSize="30sp"

           android:layout_centerHorizontal="true"
           android:id="@+id/student_name"

           android:layout_margin="15dp"
           android:fontFamily="@font/source_sans_pro_semibold"
           android:textColor="@color/white"/>

       <TextView
           android:layout_below="@+id/student_name"
           android:id="@+id/student_department"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"

           android:textSize="18sp"
           android:layout_margin="10dp"

           android:layout_centerHorizontal="true"
           android:layout_gravity="center"
           android:paddingLeft="20dp"
           android:paddingRight="20dp"
           android:paddingTop="5dp"
           android:paddingBottom="5dp"
           android:textColor="@color/white"
           android:fontFamily="@font/source_sans_pro_semibold"
           android:background="@drawable/round_button"/>

       <ImageView
           android:id="@+id/student_quote_icon"
           android:layout_width="wrap_content"
           android:layout_centerHorizontal="true"
           android:layout_height="24dp"
           android:layout_margin="10dp"

           android:src="@drawable/quote_icon"
           android:tint="@color/white"
           android:layout_below="@id/student_department"
           android:layout_gravity="center"

           />

       <TextView
           android:layout_centerHorizontal="true"
           android:id="@+id/student_quote"
           android:layout_below="@id/student_quote_icon"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_margin="10dp"
           android:textFontWeight="300"
           android:textSize="20sp"
           android:textColor="@color/white"
           android:fontFamily="@font/source_sans_pro_semibold"
           android:layout_gravity="center"
           android:textAlignment="center"
           android:textStyle="italic"
           />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_below="@+id/student_quote"
           android:layout_marginTop="80dp"
           android:orientation="vertical">
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"
           android:gravity="center"




           android:id="@+id/student_extra_icons"
             >

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:tint="@color/Secondary"
               android:layout_gravity="center"

               android:src="@drawable/email_icon"/>

           <ImageView
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:layout_gravity="center"

               android:src="@drawable/cake"/>

       </LinearLayout>

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal"


           android:layout_below="@+id/student_extra_icons"
           android:id="@+id/student_extra">

           <TextView
               android:id="@+id/student_mail"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"

               android:layout_marginLeft="10dp"
               android:layout_marginRight="10dp"
               android:textSize="14sp"
               android:textColor="@color/white"/>

           <TextView
               android:id="@+id/student_dob"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"
               android:textAlignment="center"

               android:layout_margin="5dp"

               android:textSize="14sp"
               android:textColor="@color/white"/>


       </LinearLayout>
       </LinearLayout>












   </RelativeLayout>
       </ScrollView>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/gcaps"
            android:src="@drawable/gcaps"/>



    </RelativeLayout>

</FrameLayout>